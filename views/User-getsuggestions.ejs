<%- include('partials/user-header') -%>

<%#  as this is a ejs file
        user object is accessible here  %>

    <div class="jumbotron">
        <h1> Get Suggestions </h1>
    </div>

    <div class="container">
        <div class="box">
            <h2>Generate suggestions</h2>
            <p class="lint">
                You will be suggested people like minded to you
            </p>
        </div>
    </div>

    <div style="text-align: center; margin-bottom: 30px; margin-top: 50px;">
        <span <%= user.hasFilledTheForm ? "hidden" : ""  %> class="warning">
            You have not filled the User Details form,
            <a href="/updatedetails">click here</a> to fill the form.
        </span>
    </div>

    <div class="container text-center">
        <form class="" action="/getsuggestions" method="post">
            <button <%= user.hasFilledTheForm ? "" : "disabled" %> type="submit" class="getsuggestionbutton btn btn-success" name="button"> <h3>Generate</h3> </button>
        </form>
    </div>



<%- include('partials/user-footer') -%>
