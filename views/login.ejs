<%- include('partials/index-header') -%>

<div class="box">
    <h1 class="heading">Login</h1>
    <form class="" action="/login" method="post" >

        <div class="form-group">
            <label for="">Email-address</label>
            <input type="text" class="form-control" name="email" value="" placeholder="Enter your email address">
        </div>
        <div class="form-group">
            <label for="">Password</label>
            <input type="password" class="form-control" name="password" value="" placeholder="Enter your password">
        </div>
        <div class="form-group">
            <button type="submit" class=" form-control btn btn-success btn-lg space" name="button">Log-In</button>
        </div>

        <p class="center" >
            Don't have an account?
            <a href="/register">Register</a>
        </p>
    </form>
</div>


<%- include('partials/index-footer') -%>
